<?xml version="1.0" encoding="UTF-8"?>
    <androidx.constraintlayout.widget.ConstraintLayout
    android:layout_height="match_parent" android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/back3"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <CheckBox
        android:id="@+id/checkbox_livre1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Père riche, Père pauvre  -  $52.0"
        android:fontFamily="@font/archivo_black"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <CheckBox
        android:fontFamily="@font/archivo_black"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:id="@+id/checkbox_livre2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Les 7 habitudes de ceux qui réalisent tout ce qu'ils entreprennent  -  $67.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_livre1" />

    <CheckBox
        android:id="@+id/checkbox_livre3"
        android:layout_width="wrap_content"
        android:fontFamily="@font/archivo_black"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="Réfléchissez et devenez riche  -  $25.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_livre2" />

    <CheckBox  android:fontFamily="@font/archivo_black"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:id="@+id/checkbox_livre4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le personal MBA  -  $35.4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_livre3" />

    <CheckBox  android:fontFamily="@font/archivo_black"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:id="@+id/checkbox_livre5"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Le Lean Startup  -  $21.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_livre4" />

    <Button
        android:id="@+id/btn_calculer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Calculate"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:fontFamily="@font/archivo_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkbox_livre5" />

    <TextView  android:fontFamily="@font/archivo_black"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/black"
        android:textColor="@color/black"
        android:id="@+id/tv_resultat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Result"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_calculer" />

    <Button
        android:id="@+id/précédent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/précédent"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:fontFamily="@font/archivo_black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.214"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.859" />

    <Button
        android:id="@+id/suivant"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="@color/black"
        android:textColor="@color/white"
        android:fontFamily="@font/archivo_black"
        android:text="@string/Suivant"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.836"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.859" />


</androidx.constraintlayout.widget.ConstraintLayout>